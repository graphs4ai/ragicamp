#!/bin/bash
# Setup environment variables for ragicamp
#
# Usage:
#   1. Copy this template: cp setup_env.sh.template setup_env.sh
#   2. Edit setup_env.sh with your actual credentials
#   3. Source it: source setup_env.sh
#
# Note: setup_env.sh is in .gitignore to prevent committing credentials

# DeepInfra API Key (preferred for LLM judge â€” cheaper than OpenAI)
# Sign up at https://deepinfra.com and get your API key
export DEEPINFRA_API_KEY="your-deepinfra-api-key-here"

# OpenAI API Key (fallback for LLM judge if DEEPINFRA_API_KEY is not set)
export OPENAI_API_KEY="your-openai-api-key-here"

# Hugging Face API Token
export HF_TOKEN="your-huggingface-token-here"

# Optional: Hugging Face Hub token (alternative name used by some libraries)
export HUGGINGFACE_HUB_TOKEN="$HF_TOKEN"

# Backblaze B2 credentials (for artifact storage)
export B2_KEY_ID="your-b2-key-id-here"
export B2_APP_KEY="your-b2-app-key-here"

echo "Environment variables set:"
echo "  DEEPINFRA_API_KEY: ${DEEPINFRA_API_KEY:0:10}..."
echo "  OPENAI_API_KEY: ${OPENAI_API_KEY:0:10}..."
echo "  HF_TOKEN: ${HF_TOKEN:0:10}..."
echo "  B2_KEY_ID: ${B2_KEY_ID:0:10}..."
